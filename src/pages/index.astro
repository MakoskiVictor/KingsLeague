---
import Layout from "../layouts/Layout.astro";
const response = await fetch(
  "https://kings-league-api.makoski.workers.dev/teams/"
);
const teams = await response.json();
---

<Layout title='Kings League Infojobs'>
  <div class='container m-auto'>
    <header class='flex'>
      {
        teams.map(({ id, image, name }) => (
          <div>
            <a href={`/team/${id}`}>
              <img src={image} alt={`Escudo del equipo ${name}`} />
            </a>
          </div>
        ))
      }
    </header>
    <main></main>
  </div>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
</style>
